{% assign specifications = product.metafields.custom.specifications_table.value %}

<section>
  <table>
    <thead>
      <tr>
        <th>Specification</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      {% for spec in specifications %}
        <tr>
          <td>{{ spec.key }}</td>
          <td>{{ spec.value }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>

{% schema %}
{
  "name": "Specifications Table",
  "tag": "section",
  "class": "section",
  "presets": [
    {
      "name": "Specifications Table"
    }
  ]
}
{% endschema %}
