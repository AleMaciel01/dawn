{%- comment -%}
  New Product Carousel Section
  Horizontally aligned cards with customizable button colors
{%- endcomment -%}

<div class="custom-carousel-wrapper">
  <div class="custom-carousel-header" style="text-align:{{ section.settings.heading_alignment }};">
    {% if section.settings.heading != blank %}
      <h2 class="custom-carousel-heading">{{ section.settings.heading }}</h2>
    {% endif %}
  </div>

  <div class="custom-carousel">
    <button class="custom-carousel-btn prev" aria-label="Scroll left">&#8249;</button>

    <div class="custom-carousel-track-wrapper">
      <div class="custom-carousel-track">
        {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
          <div class="custom-carousel-item">
            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | img_url: '300x' }}"
                alt="{{ product.title }}"
                width="300"
                height="300"
              >
              <div class="custom-carousel-title">{{ product.title }}</div>
              <div class="custom-carousel-price">{{ product.price | money }}</div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>

    <button class="custom-carousel-btn next" aria-label="Scroll right">&#8250;</button>
  </div>
</div>

<style>
  .custom-carousel-wrapper {
    max-width: 100%;
    overflow: hidden;
  }

  .custom-carousel-header {
    text-align: center;
    margin-bottom: 1rem;
  }

  .custom-carousel {
    position: relative;
    display: flex;
    align-items: center;
  }

  .custom-carousel-track-wrapper {
    overflow-x: auto;
    flex-grow: 1;
    scroll-behavior: smooth;
  }

  .custom-carousel-track {
    display: flex;
    gap: 1rem;
    padding: 1rem;
  }

  .custom-carousel-item {
    flex: 0 0 auto;
    width: 200px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background: white;
    padding: 0.5rem;
    text-align: center;
  }

  .custom-carousel-item img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto 0.5rem;
  }

  .custom-carousel-title {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .custom-carousel-price {
    color: #444;
    font-weight: bold;
  }

  .custom-carousel-btn {
    background-color: {{ section.settings.button_color }};
    color: white;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    font-size: 1.5rem;
    cursor: pointer;
    transition: opacity 0.3s ease;
    display:none; /* Hide by default */
  }
      @media only screen and (min-width: 668px) {
        .custom-carousel-btn {
          display: block;
        }
  }

  .custom-carousel-btn:disabled {
    opacity: 0;
    pointer-events: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carousel = document.querySelector('.custom-carousel');
    const trackWrapper = carousel.querySelector('.custom-carousel-track-wrapper');
    const prevBtn = carousel.querySelector('.custom-carousel-btn.prev');
    const nextBtn = carousel.querySelector('.custom-carousel-btn.next');

    function updateButtons() {
      const scrollLeft = trackWrapper.scrollLeft;
      const maxScrollLeft = trackWrapper.scrollWidth - trackWrapper.clientWidth;

      prevBtn.disabled = scrollLeft <= 0;
      nextBtn.disabled = scrollLeft >= maxScrollLeft - 5;
    }

    prevBtn.addEventListener('click', () => {
      trackWrapper.scrollBy({ left: -300, behavior: 'smooth' });
      setTimeout(updateButtons, 300);
    });

    nextBtn.addEventListener('click', () => {
      trackWrapper.scrollBy({ left: 300, behavior: 'smooth' });
      setTimeout(updateButtons, 300);
    });

    trackWrapper.addEventListener('scroll', updateButtons);
    window.addEventListener('resize', updateButtons);
    setTimeout(updateButtons, 100);
  });
</script>

{% schema %}
{
  "name": "New Product Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products",
      "min": 4,
      "max": 20,
      "step": 1,
      "default": 10
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Arrow button color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "New Product Carousel"
    }
  ]
}
{% endschema %}
